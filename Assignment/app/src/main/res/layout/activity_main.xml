<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dahye.assignment.MainActivity">

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="33dp"
            android:id="@+id/l">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blank1" />

            <Button
                android:text="Clear Record-High Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_bright"
                android:elevation="0dp"
                style="@style/Widget.AppCompat.Button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blank2" />

            <Button
                android:text="Generate SCV Record for Acc.Sen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:background="@android:color/holo_blue_bright" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blank3" />

            <TextView
                android:text="The Light Sensor Reading is:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:id="@+id/lightsensortv" />

            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lightValue"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blank4" />

            <TextView
                android:text="The Record-High Light Sensor Reading is:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/highlighttv"
                android:textColor="@android:color/black" />

            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/highlighttv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/hlr"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blank5" />

            <TextView
                android:text="The Accelerometer Reading is:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="@android:color/black" />

            <TextView
                android:text="(0,0,0)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ar"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blank6" />

            <TextView
                android:text="The Record-High Accelerometer Reading is:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@android:color/black" />

            <TextView
                android:text="(0,0,0)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/har"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blank7" />

            <TextView
                android:text="The Magnetic Sensor Reading is:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mr"
                android:text="(0,0,0)"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blank9" />

            <TextView
                android:text="The Record-High Magnetic Sensor Reading is:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textColor="@android:color/black" />

            <TextView
                android:text="(0,0,0)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hmr"
                android:textColor="@android:color/black" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
